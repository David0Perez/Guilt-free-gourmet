<div class="wrapper">
  <header>
    <h2 class="text-center is-size-5 text-amber-300  font-semibold">Welcome {{username}}!</h2>

  </header>

  <section class="columns">
    <section class="columns">
      <div class="column text-center" id="intro-page">
        <h2 class="is-size-5 my-5 text-lime-500 font-medium">My Recipes</h2>

         <div class="div4scroll">
                  <!-- change the info below from our user database to the api info -->
                 <ul>
                  {{#if recipes.length}}
                  {{#each recipes as |recipe|}}
                  <li><a href="/recipe/{{recipe.id}}">{{recipe.recipe_name}}</a></li>
                  {{/each}}
                  {{/if}}
                 </ul> 
                </div>
      </div>
    </section>




    <section class="columns">
      <div class="column text-center" id="intro-page">

        <strong class="text-red-500 is-size-5">Create New Recipe</strong>
        <form class="form new-recipe-form" id="new-Recipe-form">
          <div class="form-group my-4">
            <label for="recipe-name">Recipe Name:</label>
            <input class="form-input has-text-black" type="text" id="recipe-name" name="recipe-name" />
          </div>
          <div></div>
          <div class="form-group my-4">
            <label for="recipe-ingredients">Ingredients:</label>
            <textarea class="form-input has-text-black" id="recipe-ingredients" name="recipe-ingredients"></textarea>
          </div>
          <div class="form-group my-4">
            <label for="recipe-directions">Directions:</label>
            <textarea class="form-input has-text-black" id="recipe-directions" name="recipe-directions"></textarea>
          </div>
          <div class="form-group my-4">
            <button type="submit" class="button is-success has-text-black font-bold" id="createBtn">Create</button>
          </div>
        </form>


      </div>
</div>
</div>

</section>

</section>
</div>
<div>
  <p class="text-center has-text-white">&copy; 2024 Guilt Free Gourmet</p>
</div>

<script src="/js/newRecipe.js"></script>
</section>