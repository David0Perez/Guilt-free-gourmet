<div class="wrapper">
        <header>
          <h2 class="text-center is-size-5 text-amber-300  font-semibold">Welcome, {{name}}!</h2>

        </header>

        <section class="columns">
            <div class="column text-center" id="intro-page">
                <h2 class="is-size-5 my-5 text-lime-500 font-medium">My Comments</h2>
                
                <div class="div4scroll">
                  <ul>
                   {{#if comments.length}}
                   {{#each comments as |comment|}}
                   <li><a href="/recipe/{{recipe.id}}">{{recipe.name}}</a></li>
                   {{/each}}
                   {{/if}}
                  </ul>
                 </div>
            
            </div>
            <div class="column text-center" id="intro-page">
                <h2 class="is-size-5 my-5 text-red-300 font-medium">Current Recipe</h2>
                <div class="div4scroll">
                  <h2 class="text-center is-size-5 my-5">{{name}}</h2>
                  <p class="my-4">{{{ingredients}}}</p>
                  <p class="my-4">{{directions}}</p>     
                 </div>
            </div>
            <div class="column text-center" id="intro-page">
                <h2 class="is-size-5 my-5 text-yellow-300 font-medium"> Add Comments</h2>
             
                <div class="field">
                 
                  <div class="control">
                    <textarea class="textarea is-small" placeholder=""></textarea>
                  </div>
                </div>
                
                <div class="field is-grouped">
                  <div class="control">
                    <button class="button is-small btn bg-amber-100 has-text-black font-bold my-4" id="submitComment">Save</button>
                  </div>
                </div>
            </div>
            
        </section>
    </div>
    <div>
        <p class="text-center has-text-white">&copy; 2024 Guilt Free Gourmet</p>
     </div>
</section>