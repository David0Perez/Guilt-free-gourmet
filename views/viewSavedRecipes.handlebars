<div class="wrapper">
        <header>
          <h2 class="text-center is-size-5 text-amber-300  font-semibold">Welcome {{username}}!</h2>

        </header>

        <section class="columns">
            <div class="column text-center" id="intro-page">
                <h2 class="is-size-5 my-5 text-lime-500 font-medium">My Comments</h2>
                <ul>
                   {{#if comments.length}}
                   {{#each comments as |comment|}}
                    <p class="my-4">{{comment.comment_text}}!</p>
                   {{/each}}
                   {{/if}}
                </ul>
                <div class="div4scroll">
                   <h2 class="text-center is-size-5 my-5">{{username}}</h2>
                 </div>
                 </div>
            
             <div class="column text-center" id="intro-page">
                <h2 class="is-size-5 my-5 text-red-300 font-medium">Current Recipe</h2>
                <div class="div4scroll">
                  <img src="/images/{{filename}}">
                  <h2 class="text-center is-size-5 my-5">{{recipe_name}}</h2>
                  <p class="my-4">{{{ingredients}}}</p>
                  <p class="my-4">{{description}}</p>     
                 </div>
            </div>
            </div>
            <div class="column text-center" id="intro-page">
                <h2 class="is-size-5 my-5 text-yellow-300 font-medium"> Add Comments</h2>
             
                <div class="field">
                  <form class="form new-recipe-form" id="submitComment" data-currentId="{{currentRecipeId}}">
                      <div class="control">
                        <textarea class="textarea is-small" placeholder="Add your comments here" id="comment_text"></textarea>
                      </div>
                    <div class="field is-grouped">
                  <div class="control">
                    <button type="submit" class="button is-small btn bg-amber-100 has-text-black font-bold my-4">Save</button>
                  </div>
                </div>
                  </form>

                 
                  
                </div>
                
                
            </div>
            
        </section>
    </div>
    <div>
        <p class="text-center has-text-white">&copy; 2024 Guilt Free Gourmet</p>
     </div>

  <script src="/js/newComment.js"></script>
</section>